{
  "name": "Planscape",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "web",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": ["ms-python.python"],
  "forwardPorts": [4200],
  "runArgs": [
    "--network",
    "bridge",
    "--env-file", // Prod deployment provides a .env in the root, but we need to provide our own since .env will not be in the root within the dev container
    ".devcontainer/devcontainer.env"
  ],
  "workspaceFolder": "/usr/src/app",
  "shutdownAction": "stopContainer", // This might be needed for DevPod
  "postCreateCommand": "if [ ! -f .devcontainer/already-initialized.flag ]; then bash .devcontainer/post-create.sh && touch .devcontainer/already-initialized.flag; fi" // Run only once, on initial build
}
